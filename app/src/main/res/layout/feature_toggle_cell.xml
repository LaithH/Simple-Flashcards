<?xml version="1.0" encoding="utf-8"?>
<com.randomappsinc.simpleflashcards.theme.ThemedLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/feature_toggle_parent"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="4dp"
    android:gravity="center_vertical"
    android:foreground="?android:attr/selectableItemBackground"
    tools:ignore="RtlHardcoded"
    >

    <com.randomappsinc.simpleflashcards.theme.ThemedTextView
        android:id="@+id/feature_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="15sp"
        />

    <com.randomappsinc.simpleflashcards.theme.ThemedSwitch
        android:id="@+id/feature_toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        />
</com.randomappsinc.simpleflashcards.theme.ThemedLinearLayout>
