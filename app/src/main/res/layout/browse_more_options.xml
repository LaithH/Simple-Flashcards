<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <com.randomappsinc.simpleflashcards.theme.ThemedCheckBox
        android:id="@+id/do_not_show_learned"
        android:text="@string/do_not_show_learned"
        android:layout_marginTop="-4dp"
        style="@style/checkbox"
        />

    <com.randomappsinc.simpleflashcards.theme.ThemedCheckBox
        android:id="@+id/enable_shake"
        android:text="@string/enable_shake_to_choose"
        style="@style/checkbox"
        />

    <com.randomappsinc.simpleflashcards.theme.ThemedCheckBox
        android:id="@+id/show_terms_by_default"
        android:text="@string/show_terms_on_the_front"
        android:checked="true"
        android:clickable="false"
        style="@style/checkbox"
        />

    <com.randomappsinc.simpleflashcards.theme.ThemedCheckBox
        android:id="@+id/show_definitions_by_default"
        android:text="@string/show_definitions_on_the_front"
        style="@style/checkbox"
        />
</LinearLayout>
