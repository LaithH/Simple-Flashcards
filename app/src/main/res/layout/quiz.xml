<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="RtlHardcoded, ContentDescription">

    <ScrollView
        android:id="@+id/problem_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/submit">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/question_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                android:textSize="15sp"
                android:textColor="@color/dark_gray"/>

            <TextView
                android:id="@+id/question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="4dp"
                android:textSize="21sp"
                android:textColor="@color/black"/>

            <ImageView
                android:id="@+id/question_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"/>

            <RadioGroup
                android:id="@+id/options"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/option_1"
                    style="@style/quiz_radio_button"/>

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/option_2"
                    style="@style/quiz_radio_button"/>

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/option_3"
                    style="@style/quiz_radio_button"
                    android:visibility="gone"/>

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/option_4"
                    style="@style/quiz_radio_button"
                    android:visibility="gone"/>
            </RadioGroup>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/submit"
        android:layout_marginTop="0dp"
        android:layout_alignParentBottom="true"
        android:text="@string/submit"
        style="@style/button"/>

    <ScrollView
        android:id="@+id/results_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:alpha="0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/results_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:gravity="center_horizontal"
                android:textColor="@color/dark_gray"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="25sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/retake"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginRight="8dp"
                    android:text="@string/retake"
                    style="@style/rounded_button"/>

                <TextView
                    android:id="@+id/exit"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"
                    android:text="@string/exit"
                    style="@style/rounded_button"/>
            </LinearLayout>

            <TextView
                android:id="@+id/view_results"
                android:text="@string/view_results"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                style="@style/rounded_button"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
