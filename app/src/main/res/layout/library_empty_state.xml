<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/no_sets"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="40dp"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:ignore="SpUsage, RtlHardcoded"
    >

    <com.randomappsinc.simpleflashcards.theme.ThemedTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="@string/no_sets_at_all"
        android:textColor="@color/dark_gray"
        android:textSize="23sp"
        />

    <com.randomappsinc.simpleflashcards.theme.ThemedCardView
        android:id="@+id/download_sets_button"
        android:layout_marginBottom="4dp"
        style="@style/no_sets_option_card"
        >

        <LinearLayout style="@style/library_empty_state_option_container">

            <com.joanzapata.iconify.widget.IconTextView
                android:text="@string/download_icon"
                style="@style/library_empty_state_icon"
                />

            <com.randomappsinc.simpleflashcards.theme.ThemedTextView
                android:text="@string/download_flashcards_from_quizlet"
                style="@style/library_empty_state_text"
                />
        </LinearLayout>
    </com.randomappsinc.simpleflashcards.theme.ThemedCardView>

    <com.randomappsinc.simpleflashcards.theme.ThemedCardView
        android:id="@+id/create_set_button"
        android:layout_marginBottom="4dp"
        style="@style/no_sets_option_card"
        >

        <LinearLayout style="@style/library_empty_state_option_container">

            <com.joanzapata.iconify.widget.IconTextView
                android:text="@string/add_circle_icon"
                style="@style/library_empty_state_icon"
                />

            <com.randomappsinc.simpleflashcards.theme.ThemedTextView
                android:text="@string/create_flashcard_set"
                style="@style/library_empty_state_text"
                />
        </LinearLayout>
    </com.randomappsinc.simpleflashcards.theme.ThemedCardView>

    <com.randomappsinc.simpleflashcards.theme.ThemedCardView
        android:id="@+id/import_from_csv_button"
        android:layout_marginBottom="4dp"
        style="@style/no_sets_option_card"
        >

        <LinearLayout style="@style/library_empty_state_option_container">

            <com.joanzapata.iconify.widget.IconTextView
                android:text="@string/document_icon"
                style="@style/library_empty_state_icon"
                />

            <com.randomappsinc.simpleflashcards.theme.ThemedTextView
                android:text="@string/import_flashcards_from_csv"
                style="@style/library_empty_state_text"
                />
        </LinearLayout>
    </com.randomappsinc.simpleflashcards.theme.ThemedCardView>

    <com.randomappsinc.simpleflashcards.theme.ThemedCardView
        android:id="@+id/share_with_nearby_button"
        android:layout_marginBottom="4dp"
        style="@style/no_sets_option_card"
        >

        <LinearLayout style="@style/library_empty_state_option_container">

            <com.joanzapata.iconify.widget.IconTextView
                android:text="@string/share_nearby_icon"
                style="@style/library_empty_state_icon"
                />

            <com.randomappsinc.simpleflashcards.theme.ThemedTextView
                android:text="@string/get_flashcards_from_nearby_users"
                style="@style/library_empty_state_text"
                />
        </LinearLayout>
    </com.randomappsinc.simpleflashcards.theme.ThemedCardView>

    <com.randomappsinc.simpleflashcards.theme.ThemedCardView
        android:id="@+id/restore_sets_button"
        style="@style/no_sets_option_card"
        >

        <LinearLayout style="@style/library_empty_state_option_container">

            <com.joanzapata.iconify.widget.IconTextView
                android:text="@string/download_icon"
                style="@style/library_empty_state_icon"
                />

            <com.randomappsinc.simpleflashcards.theme.ThemedTextView
                android:text="@string/restore_flashcards_from_backup"
                style="@style/library_empty_state_text"
                />
        </LinearLayout>
    </com.randomappsinc.simpleflashcards.theme.ThemedCardView>

    <com.randomappsinc.simpleflashcards.theme.ThemedIconTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/home_add_options_info_text"
        android:textColor="@color/dark_gray"
        android:textSize="15sp"
        />
</LinearLayout>
