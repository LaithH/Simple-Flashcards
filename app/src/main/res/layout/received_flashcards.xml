<?xml version="1.0" encoding="utf-8"?>
<com.randomappsinc.simpleflashcards.theme.ThemedFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.randomappsinc.simpleflashcards.theme.ThemedTextView
        android:id="@+id/no_flashcards_received"
        style="@style/empty_state_text"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/flashcard_sets_received"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"/>
</com.randomappsinc.simpleflashcards.theme.ThemedFrameLayout>
