<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    tools:ignore="SpUsage, RtlHardcoded, ContentDescription">

    <com.randomappsinc.simpleflashcards.theme.ThemedCardView
        android:layout_height="wrap_content"
        style="@style/flashcard_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.randomappsinc.simpleflashcards.theme.ThemedTitleTextView
                android:id="@+id/position_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:layout_margin="8dp"
                android:textColor="@color/black"
                android:textSize="13dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dark_gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:padding="8dp"
                    android:orientation="vertical">

                    <com.randomappsinc.simpleflashcards.theme.ThemedTextView
                        android:id="@+id/term_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"/>

                    <com.randomappsinc.simpleflashcards.views.SquareImageView
                        android:id="@+id/term_image"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/dark_gray"/>

                <com.randomappsinc.simpleflashcards.theme.ThemedTextView
                    android:id="@+id/definition"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:padding="8dp"
                    android:textSize="15sp"/>
            </LinearLayout>
        </LinearLayout>
    </com.randomappsinc.simpleflashcards.theme.ThemedCardView>
</LinearLayout>
