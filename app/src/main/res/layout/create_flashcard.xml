<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.randomappsinc.simpleflashcards.theme.ThemedTitleTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/term"
        android:textColor="@color/black"
        android:textSize="19sp"/>

    <FrameLayout
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.randomappsinc.simpleflashcards.theme.ThemedEditText
            android:id="@+id/term_input"
            android:hint="@string/term_entry_hint"
            android:layout_gravity="end|center_vertical"
            style="@style/blue_line_edittext"/>

        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/voice_term_entry"
            android:text="@string/microphone_icon"
            android:layout_gravity="end|center_vertical"
            style="@style/create_flashcard_icon"/>
    </FrameLayout>

    <TextView
        android:id="@+id/duplicate_term_warning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="@string/duplicate_term_warning"
        android:textColor="@color/red"
        android:textSize="13sp"
        android:visibility="gone"/>

    <com.randomappsinc.simpleflashcards.theme.ThemedTitleTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/definition"
        android:textColor="@color/black"
        android:textSize="19sp"/>

    <FrameLayout
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.randomappsinc.simpleflashcards.theme.ThemedEditText
            android:id="@+id/definition_input"
            android:layout_marginTop="4dp"
            android:hint="@string/definition_entry_hint"
            style="@style/blue_line_edittext"/>

        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/voice_definition_entry"
            android:text="@string/microphone_icon"
            android:layout_gravity="end|center_vertical"
            style="@style/create_flashcard_icon"/>
    </FrameLayout>

    <TextView
        android:id="@+id/duplicate_definition_warning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="@string/duplicate_definition_warning"
        android:textColor="@color/red"
        android:textSize="13sp"
        android:visibility="gone"/>
</LinearLayout>
