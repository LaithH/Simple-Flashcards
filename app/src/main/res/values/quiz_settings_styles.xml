<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="quiz_settings_header_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="quiz_settings_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:background">@color/gray</item>
    </style>

    <style name="quiz_settings_icon">
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="quiz_settings_section_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="quiz_settings_number_change_button" parent="rounded_button">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="quiz_settings_checkbox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:textSize">17dp</item>
        <item name="buttonTint">@color/app_blue</item>
    </style>
</resources>
