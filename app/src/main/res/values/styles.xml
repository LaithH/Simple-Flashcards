<resources>
    <style name="set_title">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="search_icon">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/app_blue</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:background">@color/app_blue</item>
    </style>

    <style name="rounded_button" parent="button">
        <item name="android:background">@drawable/rounded_button_background</item>
    </style>

    <style name="flashcard_card">
        <item name="android:layout_width">match_parent</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">3dp</item>
        <item name="cardElevation">2dp</item>
    </style>

    <style name="action_bar_icon">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">32dp</item>
        <item name="android:shadowColor">@color/shadow_black</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="set_action_card">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">3dp</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPadding">8dp</item>
    </style>

    <style name="set_action_icon">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">32dp</item>
    </style>

    <style name="set_action_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">21dp</item>
    </style>
</resources>
