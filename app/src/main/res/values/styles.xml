<resources>
    <style name="set_title">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="search_icon">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/app_blue</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:background">@color/app_blue</item>
    </style>

    <style name="rounded_button" parent="button">
        <item name="android:background">@drawable/rounded_blue_rectangle</item>
    </style>

    <style name="flashcard_card">
        <item name="android:layout_width">match_parent</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">3dp</item>
        <item name="cardElevation">2dp</item>
    </style>

    <style name="action_bar_icon">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">32dp</item>
        <item name="android:shadowColor">@color/shadow_black</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="empty_state_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_margin">40dp</item>
        <item name="android:textSize">23sp</item>
    </style>

    <style name="clickable_card" parent="flashcard_card">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="contentPadding">8dp</item>
    </style>

    <style name="quizlet_search_result_skeleton_card" parent="flashcard_card">
        <item name="android:layout_height">wrap_content</item>
        <item name="contentPadding">8dp</item>
    </style>

    <style name="tabs">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabIndicatorColor">@color/green</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabTextColor">@color/half_white</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <style name="blue_line_edittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:background">@drawable/blue_edittext_background</item>
    </style>

    <style name="bottom_navigation_item">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">24dp</item>
    </style>

    <style name="create_flashcard_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/app_blue</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="no_sets_option_card">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">3dp</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPadding">8dp</item>
    </style>

    <style name="checkbox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:textSize">17dp</item>
    </style>
</resources>
