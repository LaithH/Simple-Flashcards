<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.randomappsinc.simpleflashcards">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:name=".utils.MyApplication"
        android:icon="@mipmap/ic_launcher"
        android:theme="@style/AppTheme"
        android:label="@string/app_name">

        <activity
            android:name=".activities.MainActivity"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:label="@string/app_name">

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.SettingsActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/settings">
        </activity>

        <activity
            android:name=".activities.EditFlashcardSetActivity"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:label="@string/edit_flashcard_set"
            android:configChanges="orientation|screenSize">
        </activity>

        <activity
            android:name=".activities.StudyModeActivity"
            android:theme="@style/AppTheme.StudyMode"
            android:configChanges="orientation|screenSize">
        </activity>

        <activity
            android:name=".activities.QuizActivity"
            android:configChanges="orientation|screenSize">
        </activity>

        <activity
            android:name=".activities.QuizResultsActivity"
            android:configChanges="orientation|screenSize">
        </activity>

        <activity
            android:name=".activities.QuizletSearchActivity"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:label="@string/download_flashcard_sets_title"
            android:configChanges="orientation|screenSize">
        </activity>

        <activity
            android:name=".activities.ViewQuizletSetActivity"
            android:configChanges="orientation|screenSize">
        </activity>

        <activity
            android:name=".activities.PictureFullViewActivity"
            android:theme="@style/AppTheme.PictureFullView"
            android:configChanges="orientation|screenSize">
        </activity>
    </application>
</manifest>
